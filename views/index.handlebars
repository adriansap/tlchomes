<h2>Burgers to eat:</h2>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block sleep=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Burgers that are gone:</h2>

      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block sleep=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    {{!-- <label for="eaten">eaten?</label><br> --}}
    {{!-- <input type="radio" name="eaten" value="1" checked> eaten!<br> --}}
    <input class="toMakeAvailable" type="radio" name="eaten" checked="checked" display="none" value="0">
  </div>

  <button type="submit">Add Burger</button>
</form>